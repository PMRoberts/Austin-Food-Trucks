<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#d8e6f0">

    <LinearLayout
        android:orientation="vertical" android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/lableMenuName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="25sp"
                android:text="Name: "
                android:layout_centerVertical="true"
                />
            <EditText
                android:id="@+id/EditMenuName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/lableMenuName"
                android:hint="edit here"
                android:textSize="20sp"
                android:layout_centerVertical="true"/>
            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="2dip"
                android:background="#000000"
                android:layout_alignParentTop="true"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/EditImageContainer"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_toRightOf="@+id/EditMenuImage">
            <ImageView
                android:id="@+id/EditMenuImage"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:padding="5dp"
                android:background="#000000" />
            <Button
                android:id="@+id/ChooseNewImageButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="new picture"
                android:layout_toRightOf="@+id/EditMenuImage"
                android:layout_centerInParent="true" />
            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="2dip"
                android:background="#000000"
                android:layout_alignParentTop="true"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/lableMenuInfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="25sp"
                android:text="About: "
                android:layout_centerVertical="true"
                />
            <EditText
                android:id="@+id/EditMenuInfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/lableMenuInfo"
                android:hint="edit here"
                android:textSize="20sp"
                android:layout_centerVertical="true"/>
            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="2dip"
                android:background="#000000"
                android:layout_alignParentTop="true"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/lableMenuPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="25sp"
                android:text="Price: "
                android:layout_centerVertical="true"
                />
            <EditText
                android:id="@+id/EditMenuPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/lableMenuPrice"
                android:hint="edit here"
                android:textSize="20sp"
                android:layout_centerVertical="true"/>
            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="2dip"
                android:background="#000000"
                android:layout_alignParentTop="true"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/SaveShit"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="SAVE Changes"/>
            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="2dip"
                android:background="#000000"
                android:layout_alignParentTop="true"/>
        </RelativeLayout>

    </LinearLayout>
</ScrollView>